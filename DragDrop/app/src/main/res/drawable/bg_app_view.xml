<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:end="0dp"
        android:start="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="@color/bg_app_view"
                android:gradientRadius="200%"
                android:startColor="#A7A7AC"
                android:type="radial" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:end="1dp"
        android:start="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:end="2dp"
        android:start="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <solid android:color="@color/bg_app_view" />
            <size
                android:width="20dp"
                android:height="20dp" />
            <corners android:radius="10dp" />
        </shape>

    </item>
</layer-list>
